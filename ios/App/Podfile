platform :ios, '11.0'
use_frameworks!

# workaround to avoid Xcode caching of Pods that requires
# Product -> Clean Build Folder after new Cordova plugins installed
# Requires CocoaPods 1.6 or newer
install! 'cocoapods', :disable_input_output_paths => true

def capacitor_pods
  pod 'Capacitor', :path => '../../../capacitor/ios'
  pod 'CapacitorCordova', :path => '../../../capacitor/ios'
  pod 'CapacitorActionSheet', :path => '../../../capacitor-plugins/action-sheet'
  pod 'CapacitorApp', :path => '../../../capacitor-plugins/app'
  pod 'CapacitorAppLauncher', :path => '../../../capacitor-plugins/app-launcher'
  pod 'CapacitorBrowser', :path => '../../../capacitor-plugins/browser'
  pod 'CapacitorClipboard', :path => '../../../capacitor-plugins/clipboard'
  pod 'CapacitorDevice', :path => '../../../capacitor-plugins/device'
  pod 'CapacitorDialog', :path => '../../../capacitor-plugins/dialog'
  pod 'CapacitorHaptics', :path => '../../../capacitor-plugins/haptics'
  pod 'CapacitorKeyboard', :path => '../../../capacitor-plugins/keyboard'
  pod 'CapacitorNetwork', :path => '../../../capacitor-plugins/network'
  pod 'CapacitorScreenReader', :path => '../../../capacitor-plugins/screen-reader'
  pod 'CapacitorShare', :path => '../../../capacitor-plugins/share'
  pod 'CapacitorStatusBar', :path => '../../../capacitor-plugins/status-bar'
  pod 'CapacitorStorage', :path => '../../../capacitor-plugins/storage'
  pod 'CapacitorTextZoom', :path => '../../../capacitor-plugins/text-zoom'
  pod 'CapacitorToast', :path => '../../../capacitor-plugins/toast'
end

target 'App' do
  capacitor_pods
  # Add your Pods here
end
